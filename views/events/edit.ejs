<!DOCTYPE html>
<html>
  <head>
    <%- include("./partials/head", {title:"On Flavor"}) %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <h2>Edit event</h2>
        </div>
      </div>
      <div class="row">
        <form action="http://localhost:3000/events/edit/<%= event.id %>" method="post" enctype="application/json" name="event" class="col-sm-4">
          <div class="form-group">
            <label for="place_id">Place_id:</label>
            <input type="number" id="place_id" name="place_id" value="<%= event.place_id %>" />
          </div>
          <div class="form-group">
            <label for="group_id">Group_id:</label>
            <input type="number" id="group_id" name="group_id" value="<%= event.group_id %>" />
          </div>
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= event.name %>" />
          </div>
          <div class="form-group">
            <label for="description">Description:</label>
            <input type="description" id="description" name="description" value="<%= event.description %>" />
          </div>
          <div class="form-group">
            <label for="date_time">Date:</label>
            <input type="datetime" id="date_time" name="date_time" value="<%= event.date_time %>" />
          </div>
          <input type="submit" value="Save" class="btn btn-primary" />
        </form>
      </div>
    </div>
  </body>
</html>