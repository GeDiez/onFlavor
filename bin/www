#!/usr/bin/env node

require('dotenv').load();
const app = require('../app').app;
const debug = require('debug')('on-flavor-api:server');
const http = require('http');
const webpack = require('webpack');
const logger = require('morgan');
const webPackMiddlware = require('webpack-dev-middleware');

app.use(logger('dev'));
const server = require('../app').server;
const port = process.env.PORT || '3000';
app.set('port', port);

const onError = (error) => {
  if (error.syscall !== 'listen') {
    throw error;
  }
  const bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;
  switch (error.code) {
    case 'EACCES':
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

const onListening = () => {
  const addr = server.address();
  const bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on port' + bind);
}

if(process.env.NODE_ENV === 'DEVELOPMENT') {
  const config = require('../webpack.config');
  const compiler = webpack(config);
  app.use(webPackMiddlware(compiler, {
    noInfo: true,
    publicPath: config.output.publicPath
  }));
}

server.listen(port);
server.on('error', onError);
server.on(`listening at port: ${port}`, onListening);

