<!DOCTYPE html>
<html>
  <head>
    <%- include("./partials/head", { title: "On flavor" }) %>
  </head>
  <body>
    <h2>Orders</h2>
    <ul>
      <% orders.forEach(function(order) { %>
        <li>
          <%= order.quantity %>
          <%= order.dish.name %> -
          <%= order.user.name %>
          <a href="http://localhost:3000/orders/<%= order.id %>" class="btn btn-info" role="button">View Order</a>
          <a href="http://localhost:3000/orders/edit/<%= order.id %>" class="btn btn-info" role="button">Edit</a>
          <button class="btn btn-danger delete" data-place-id="<%= order.id %>" role="button">Delete</button>
        </li>
        <% }); %>
    </ul>
    <a href="http://localhost:3000/orders/new" class="btn btn-info" role="button">New Order</a>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/places.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
  </body>
</html>