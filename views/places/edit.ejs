<!DOCTYPE html>
<html>
  <head>
    <%- include("./partials/head", {title:"On Flavor"}) %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <h2>Edit place</h2>
        </div>
      </div>
      <div class="row">
        <form action="http://localhost:3000/places/edit/<%= place.id %>" method="post" enctype="application/json" name="place" class="col-sm-4">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= place.name %>" class="form-control" />
          </div>
          <div class="form-group">
            <label for="latitude">Latitude:</label>
            <input type="latitude" id="latitude" name="latitude" value="<%= place.latitude %>" class="form-control" />
          </div>
          <div class="form-group">
            <label for="longitude">Longitude:</label>
            <input id="longitude" name="longitude" value="<%= place.longitude %>" class="form-control" />
          </div>
          <input type="submit" value="Save" />
        </form>
      </div>
    </div>
  </body>
</html>