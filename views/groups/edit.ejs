<!DOCTYPE html>
<html>
  <head>
    <%- include("./partials/head", {title:"On Flavor"}) %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <h2>Edit group</h2>
        </div>
      </div>
      <div class="row">
        <form action="http://localhost:3000/groups/edit/<%= group.id %>" method="post" enctype="application/json" name="group" class="col-sm-4">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= group.name %>" class="form-control" />
          </div>
          <input type="submit" value="Save" class="btn btn-primary" />
        </form>
      </div>
    </div>
  </body>
</html>